<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/back"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/actionModeCloseDrawable" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:fontFamily="@font/baemin"
                            android:gravity="center"
                            android:text="회원 가입"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#000000"
                            android:textSize="30dp" />

                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="55dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="50dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/baemin"
                            android:text="아이디"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000000"
                            android:textSize="24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="9"
                                android:background="@drawable/background_layout2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/user_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="left"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-black"
                                    android:hint="10글자 이하"
                                    android:inputType="textPersonName"
                                    android:maxLength="10"
                                    android:privateImeOptions="defaultInputmode=english"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="#000000"
                                    android:background="@null"
                                    tools:layout_editor_absoluteX="16dp"
                                    tools:layout_editor_absoluteY="18dp" />

                                <TextView
                                    android:id="@+id/checkingId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/check_x"
                                    android:gravity="clip_horizontal|center|right"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/confirm1"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="#000000"
                                android:fontFamily="@font/baemin"
                                android:text="중복 확인"
                                android:textColor="#FFFFFF"
                                android:textSize="18dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/baemin"
                            android:gravity="center|right"
                            android:text="닉네임"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000000"
                            android:textSize="24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="9"
                                android:background="@drawable/background_layout2"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_gravity="left"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif-black"
                                    android:privateImeOptions="defaultInputmode=korean"
                                    android:hint="6글자 이하"
                                    android:inputType="textPersonName"
                                    android:maxLength="6"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:background="@null"
                                    tools:layout_editor_absoluteX="16dp" />

                                <TextView
                                    android:id="@+id/checkingNick"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/check_x"
                                    android:gravity="clip_horizontal|right"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/confirm2"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="#000000"
                                android:fontFamily="@font/baemin"
                                android:text="중복 확인"
                                android:textColor="#FFFFFF"
                                android:textSize="18dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/baemin"
                            android:text="비밀번호"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000000"
                            android:textSize="24dp" />

                        <EditText
                            android:id="@+id/user_pw"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="left"
                            android:background="@drawable/background_layout2"
                            android:fontFamily="sans-serif-black"
                            android:hint="12글자 이하"
                            android:inputType="textPassword"
                            android:maxLength="12"
                            android:password="true"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="#000000"
                            tools:layout_editor_absoluteX="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/baemin"
                            android:gravity="center|right"
                            android:text="이름"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000000"
                            android:textSize="24dp" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:background="@drawable/background_layout2"
                            android:fontFamily="sans-serif-black"
                            android:inputType="textPersonName"
                            android:maxLength="6"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            tools:layout_editor_absoluteX="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/baemin"
                            android:gravity="center|right"
                            android:text="이메일"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#000000"
                            android:textSize="24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_gravity="left"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_layout2"
                                android:ems="10"
                                android:fontFamily="sans-serif-black"
                                android:inputType="textEmailAddress"
                                android:maxLength="20"
                                android:textAlignment="center"
                                android:textColor="#000000" />

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/baemin"
                                android:text="\@"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/domain"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:autoText="false"
                                android:background="@android:color/white"
                                android:fontFamily="@font/baemin"
                                android:gravity="center|left"
                                android:text="naver.com"
                                android:textAllCaps="false"
                                android:textColor="#020202"
                                android:textSize="25dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="55dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:fontFamily="@font/baemin"
                        android:text="입력 완료"
                        android:textColor="#FFFFFF"
                        android:textSize="24dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>