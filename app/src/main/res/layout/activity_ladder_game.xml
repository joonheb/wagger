<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00444444"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/blindText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baemin"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="블라인드"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/blank2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/autoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baemin"
            android:gravity="center|right"
            android:paddingTop="15dp"
            android:paddingRight="30dp"
            android:text="자동시작"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:visibility="visible" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00444444"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/backText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/baemin"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="20dp"
                android:text="메인화면"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/resetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baemin"
                android:gravity="center|right"
                android:paddingTop="15dp"
                android:paddingRight="30dp"
                android:paddingBottom="20dp"
                android:text="다시하기"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sadariLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/playerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player1"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/char1" />

            <ImageView
                android:id="@+id/player2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/player3"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/char9" />

            <ImageView
                android:id="@+id/player4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/player5"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/char3" />

            <ImageView
                android:id="@+id/player6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/player7"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/char4" />

            <ImageView
                android:id="@+id/player8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/player9"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/char5" />

            <ImageView
                android:id="@+id/player10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/player11"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/char6" />

            <ImageView
                android:id="@+id/player12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/player13"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/char7" />

            <ImageView
                android:id="@+id/player14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/player15"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/char8" />

        </LinearLayout>

        <ImageView
            android:id="@+id/blindimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="70dp"
            android:background="#223C6F"
            android:visibility="visible" />

    </FrameLayout>


</LinearLayout>